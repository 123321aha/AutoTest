[
  {
    "description": "获取cookies信息的get请求",
    "request": {
      "uri": "/getcookies",
      "method": "get"
    },
    "response": {
      "cookies": {
        "login": "true"
      },
      "text": "获取cookies成功"
    }
  },
  {
    "description": "模拟携带cookie信息的get请求",
    "request": {
      "uri": "/getwithcookies",
      "method": "get",
      "cookies": {
        "login": "true"
      }
    },
    "response": {
      "status": 200,
      "text": "这个是需要携带cookies才能访问的请求！！"
    }
  },
  {
    "description": "模拟携带cookie信息的post请求",
    "request": {
      "uri": "/postwithcookies",
      "method": "post",
      "cookies": {
        "login": "true"
      },
      "json": {
        "name": "huhansan",
        "age": "18"
      }
    },
    "response": {
      "status": 200,
      "json": {
        "huhansan": "success",
        "status": "1"
      }
    }
  }
]